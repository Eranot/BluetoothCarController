<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="bottom"
    app:umanoPanelHeight="50dp"
    app:umanoShadowHeight="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp">

            <com.jmedeisis.bugstick.Joystick
                android:id="@+id/joystickVel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:motion_constraint="Vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/joystick2" />

            </com.jmedeisis.bugstick.Joystick>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp">

            <com.jmedeisis.bugstick.Joystick
                android:id="@+id/joystickDir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:motion_constraint="Horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/joystick2" />

            </com.jmedeisis.bugstick.Joystick>

        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>